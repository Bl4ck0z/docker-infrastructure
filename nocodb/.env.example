# Domain Configuration
NOCODB_SUBDOMAIN=nocodb.yourdomain.com

# Database Connection (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USER=db_user
DB_PASSWORD=db_password
DB_NAME=nocodb

# Authentication & Security
NC_AUTH_JWT_SECRET=your_long_random_jwt_secret_here_64_chars_minimum
NC_ADMIN_EMAIL=admin@example.com
NC_ADMIN_PASSWORD=admin_password

# Public URL Configuration
NC_PUBLIC_URL=https://nocodb.example.com

# Privacy & Security Settings
NC_DISABLE_TELE=true
NC_INVITE_ONLY_SIGNUP=true
NC_DISABLE_ERR_REPORTS=true

# Redis Configuration
NC_REDIS_URL=redis://:redis_password@redis:6379

# - Generate JWT secret with: openssl rand -base64 64
